<%= render "layouts/errors", :object => @product %>

<div class="form-group row form-width margin-left-zero">
  <%= form_for @product do |f| %>
    <%= f.label :name %>
    <div class="col-xs-3">
      <%= f.text_field :name, class:'form-control' %>
    </div>
    <%= f.label :cost %>
    <div class="col-xs-3">
      <%= f.text_field :cost, class:'form-control' %>
    </div>
    <%= f.label :country_of_origin %>
    <div class="col-xs-3">
      <%= f.text_field :country_of_origin, class:'form-control' %>
    </div>
    <br>
    <%= f.submit class: 'btn btn-success' %>
  <% end %>
</div>